@inherits QuickRegisterPhotoModelBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Registreer als klant</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@PhotoModel" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="voornaam">Voornaam: </label>
                            <InputText id="voornaam" class="form-control" @bind-Value="@PhotoModel.Voornaam" placeholder="voornaam"></InputText>
                            <ValidationMessage For="@(() => PhotoModel.Voornaam)" />
                        </div>

                        <div class="form-group">
                            <label for="achternaam">Achternaam: </label>
                            <InputText id="achternaam" class="form-control" @bind-Value="@PhotoModel.Achternaam" placeholder="achternaam"></InputText>
                            <ValidationMessage For="@(() => PhotoModel.Achternaam)" />
                        </div>

                        <button type="submit" class="btn btn-primary">Opslaan</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Sluiten</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>}