<section class="customer-edit">
    @if (!Saved)
    {
<h1 class="page-title">Details for @Customer.Voornaam @Customer.Achternaam</h1>
                <EditForm Model="@Customer" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">

                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label for="voornaam">Voornaam: </label>
                        <InputText id="voornaam" class="form-control" @bind-Value="@Customer.Voornaam" placeholder="voornaam"></InputText>
                        <ValidationMessage For="@(() => Customer.Voornaam)" />
                    </div>

                    <div class="form-group">
                        <label for="achternaam">Achternaam: </label>
                        <InputText id="achternaam" class="form-control" @bind-Value="@Customer.Achternaam" placeholder="achternaam"></InputText>
                        <ValidationMessage For="@(() => Customer.Achternaam)" />
                    </div>

                    <div class="form-group">
                        <label for="BtwNummer">Btw Nummer </label>
                        <InputText id="BtwNummer" class="form-control" @bind-Value="@Customer.BtwNummer" placeholder="Uw BTW-nummer"></InputText>
                        <ValidationMessage For="@(() => Customer.BtwNummer)" />
                    </div>
                    <div class="form-group">
                        <label for="KvkNummer">Kvk Nummer </label>
                        <InputNumber id="KvkNummer" class="form-control" @bind-Value="@Customer.KvkNummer" placeholder="Uw KvK-nummer"></InputNumber>
                        <ValidationMessage For="@(() => Customer.KvkNummer)" />
                    </div>
                    <div class="form-group">
                        <label for="logo">Logo </label>
                        <InputText id="logo" class="form-control" @bind-Value="@Customer.Logo" placeholder="Uw Logo"></InputText>
                        <ValidationMessage For="@(() => Customer.Logo)" />
                    </div>
                    <div class="form-group">
                        <label for="adres">Adres </label>
                        <InputText id="adres" class="form-control" @bind-Value="@Customer.Adres" placeholder="Adres"></InputText>
                        <ValidationMessage For="@(() => Customer.Adres)" />
                    </div>
                    <div class="form-group">
                        <label for="postcode">Postcode </label>
                        <InputText id="postcode" class="form-control" @bind-Value="@Customer.Postcode" placeholder="Postcode"></InputText>
                        <ValidationMessage For="@(() => Customer.Postcode)" />
                    </div>
                    <button type="submit" class="btn btn-primary">Opslaan</button>
                </EditForm> 
    }
    else
    {
                                <div class="alert @StatusClass">@Message</div>
                                <a class="btn btn-outline-primary" @onclick="@NavigateToOverview">Back to overview</a>
    }
</section>
