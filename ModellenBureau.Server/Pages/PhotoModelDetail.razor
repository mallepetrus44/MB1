@page "/photomodeldetail/{PhotoModelId}"
@inherits PhotoModelDetailBase

<section class="photomodel-detail">
    <h1 class="page-title">Details for @PhotoModel.Voornaam @PhotoModel.Achternaam</h1>

    @{ var leadingFormat = "00000";
        //var a = Employee.EmployeeId.ToString("00000"); }
    }
    <div class="col-12 row">
        <div class="col-10 row">
            <div class="col-xs-12 col-sm-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Foto model nummer</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@PhotoModel.PhotoModelID.ToString(leadingFormat)</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Voornaam</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Voornaam</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Achternaam</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Achternaam</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Adres</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Adres</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Postcode</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Postcode</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Plaatsnaam</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Stad</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Geboortedatum</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Geboortedatum.ToShortDateString()</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Leeftijd</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Leeftijd</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Geslacht</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Geslacht</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Bovenwijdte</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Bovenwijdte</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Taillewijdte</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Taillewijdte</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Heupwijdte</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Heupwijdte</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Lengte</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Lengte</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Fotos</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@PhotoModel.Fotos</label>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
